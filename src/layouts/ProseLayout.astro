---
import PageLayout from "./PageLayout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<PageLayout>
  <title slot="meta">Leo's Blog</title>

  <Fragment slot="main">
    <div class="prose m-auto mb-8">
      <slot name="heading" />
    </div>
    <article>
        <div class="prose m-auto">
            <slot name="content" />
        </div>
    </article>
  </Fragment>
</PageLayout>
